<odoo>
    <data>
        <record id="my_animes_season_form" model="ir.ui.view">
            <field name="name">my_animes_seasons</field>
            <field name="model">my.animes.season</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="season_name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="my_animes_list_season">
            <field name="name">Saisons</field>
            <field name="model">my.animes.season</field>
            <field name="arch" type="xml">
                <list>
                    <field name="season_name"/>
                </list>
            </field>
        </record>
        <record model="ir.actions.act_window" id="my_animes_season_open_action">
            <field name="name">Seasons</field>
            <field name="res_model">my.animes.season</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>